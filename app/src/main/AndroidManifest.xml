<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.ac.ui.cs.mobileprogramming.nathanael.pocketguideofcharacters">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/pgoc_1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/pgoc_1_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.login.LoginActivity" />
        <activity
            android:name=".views.base.BaseActivity"
            android:label="@string/title_activity_bottom_navigation" />
        <activity
            android:name=".views.timer.TimerActivity"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar" />
        <activity android:name=".views.update.UpdateCharacterActivity" />
        <activity android:name=".views.preview.PreviewCharacterActivity" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".service.ChronoService" />
        <service android:name=".service.BgmPlayerService" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>